{
  "compilerOptions": {
    /* ───────────────── Target / moduliai ───────────────── */
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",

    /* ───────────────── Language features ───────────────── */
    "lib": ["dom", "dom.iterable", "es2020"],
    "jsx": "preserve",
    "allowJs": false,
    "resolveJsonModule": true,

    /* ───────────────── Type Safety ───────────────── */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,

    /* ───────────────── Alias’ai (@/…) ───────────────── */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },

  /* Kurie failai turi būti tikrinami */
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],

  /* Kurių ignoruoti */
  "exclude": ["node_modules"]
}
